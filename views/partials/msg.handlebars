<!--alert msg-->

<!--register 錯誤提示-->
{{#if errors}}
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show ml-3" role="alert">
  {{this.msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
{{/if}}

<!--logout成功提示-->
{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show ml-3" role="alert">
  {{success_msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

<!--未login提示-->
{{#if warning_msg}}
<div class="alert alert-warning alert-dismissible fade show ml-3" role="alert">
  {{warning_msg}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}