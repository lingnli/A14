<div class="login mx-auto">

  <h3 class="text-center"><img
      src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" width="30"
      height="30" class="d-inline-block align-top mr-3" alt="我的餐廳清單">Login</h3>

  <div class="right p-3">
    <form action="/users/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control log" id="email" name="email" aria-describedby="emailHelp"
          placeholder="Enter email">

      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control log" id="password" name="password" placeholder="Password">
      </div>

      <button type="submit" class="btn-login border-0 btn btn-block btn-primary ml-4 mt-4 ">Login</button>

      <!--第三方登入-->
      <div class="form-group fb mt-3">
        <p class="d-flex align-items-center">試試一鍵登入
          <a class="text-center ml-2" href="/auth/facebook"> <i class="fab fa-facebook"></i></a>
        </p>
      </div>


      <p class="ml-4 mt-3">No account?<a href="/users/register"> Register</a> </p>


    </form>
  </div>
</div>